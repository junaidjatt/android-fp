<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_margin="5dp"
		android:background="@android:color/black"
		android:orientation="horizontal"
		android:gravity="center_vertical|center">
	   
		<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/txtTodayCondition"
	        android:textStyle="bold"
	        android:textSize="20dp"  
	         />
	
	</LinearLayout>
    
    <LinearLayout
    	android:layout_height="100dp"
    	android:layout_width="match_parent"
    	android:background="@android:color/black"
    	android:orientation="horizontal"     
        >
                        		<ImageView
			android:id = "@+id/imgCurrentWeather" 
	    	android:layout_width="70dp"
	    	android:layout_height="70dp"
	    	android:src="@drawable/ic_launcher"
	    	android:layout_margin="5dp"
	    	android:layout_gravity="center_vertical"
	    	/>
     
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		    android:id="@+id/tableLayout1"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" >
		 
		    <!-- 2 columns -->
		    <TableRow
		        android:id="@+id/tableRow1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dip" >
		 
		        <TextView
		            android:layout_width="45dp"
		            android:layout_height="wrap_content"
		            android:text="@string/temp"
		            android:textSize="15dp"
		            android:textStyle="bold"
		            android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtTemp"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_marginRight="13dp"
			   	    />
	
			   	<TextView
			   	    android:layout_width="45dp"
			   	    android:layout_height="wrap_content"
			   	    android:text="@string/humidity"
			   	    android:textSize="15dp"
			   	    android:textStyle="bold"
			   	    android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtHumidity"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
				/>
		       
		    </TableRow>
		 
  		    <TableRow
		        android:id="@+id/tableRow2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dip" >
		 
		        <TextView
		            android:layout_width="50dp"
		            android:layout_height="wrap_content"
		            android:text="@string/pressure"
		            android:textSize="15dp"
		            android:textStyle="bold"
		            android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtPressure"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_marginRight="13dp"
			   	    />

			   	<TextView
			   	    android:layout_width="45dp"
			   	    android:layout_height="wrap_content"
			   	    android:text="@string/visibility"
			   	    android:textSize="15dp"
			   	    android:textStyle="bold"
			   	    android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtVisibility"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
				/>
		       
		    </TableRow>
		    
  		    <TableRow
		        android:id="@+id/tableRow2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:padding="5dip" >
		 

		        <TextView
		            android:layout_width="45dp"
		            android:layout_height="wrap_content"
		            android:text="@string/windDirection"
		            android:textSize="15dp"
		            android:textStyle="bold"
		            android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtWindDirection"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
			   	    android:layout_marginRight="13dp"
			   	    />
	

			   	<TextView
			   	    android:layout_width="45dp"
			   	    android:layout_height="wrap_content"
			   	    android:text="@string/windSpeed"
			   	    android:textSize="15dp"
			   	    android:textStyle="bold"
			   	    android:layout_marginRight="3dp" />
			    
			   	<TextView 
			   	    android:id="@+id/txtWindSpeed"
			   	    android:layout_width="wrap_content"
			   	    android:layout_height="wrap_content"
				/>
		       
		    </TableRow>
  		    
		</TableLayout>
		       
        
    </LinearLayout>

    <LinearLayout
    	android:layout_weight=".75"
    	android:layout_height="0dp"
    	android:layout_width="match_parent"
    	android:background="@color/middle_gray"     
        >
        
        <ListView 
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lstForecast"
	        android:background="@color/middle_gray" 
	        android:cacheColorHint="@android:color/white"
	        android:drawSelectorOnTop="false"
            ></ListView>
        
    </LinearLayout>
    
</LinearLayout>